#!/bin/bash

function build {
        echo "This serves as an super evil example."
        sleep 2
        local foo=0
        echo -ne "Doing stuff ..."
        while [ $foo -lt 10 ]; do
                sleep 1
                echo -ne "."
                ((foo++))
        done
        echo ""
}

function tasks {
        compgen -A function
}

function help {
        echo "$0 <task> <args>"
        echo "Tasks:"
        tasks | cat -n
}


${@:-tasks}

